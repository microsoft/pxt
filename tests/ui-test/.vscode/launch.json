  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/src/Main.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-u",
        "bdd", // set to bdd, not tdd
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/src/Main.js"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
  ]
}