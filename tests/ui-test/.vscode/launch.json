  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "${workspaceFolder}/src/index.js",
        "--require",
        "@babel/register",
        "--require",
        "@babel/polyfill",
        "--colors",
        "--no-timeouts"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}