/*******************************
    User Variable Overrides
*******************************/

.ui.card .ui.button.massive {
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
}

/* File card for the Home screen */

.ui.card.file {
    .fileimage {
        position: absolute;
        top: 0.7rem;
        left: 0.7rem;
        width: 4rem;
        height: 3rem;
        background-repeat: no-repeat;
        background-size: contain;
        background-image: @blocksIcon;
        filter: @logoFilter;
    }
    .content {
        margin-left: 4rem;
        min-width: 5rem;
        height: 8rem;
        .header {
            word-break: break-all;
            overflow: hidden;
            height: 6.5rem;
            text-overflow: ellipsis;
        }
    }
    .meta {
        height: 4rem;
        padding: 1rem;
        text-align: right;
    }
}

.ui.card.file.github {
    .fileimage {
        background-image: @githubFileLogo;
    }
}

.ui.card.file.test {
    .fileimage {
        background-image: @testFileLogo;
    }
}

.ui.card.file.board {
    .fileimage {
        background-image: unset;
    }
}

.ui.card.file.blocksprj {
    .fileimage {
        background-size: 85%;
        background-position-y: 50%;
    }
}

.ui.card.file.pyprj {
    .fileimage {
        background-image: @pyIcon;
        filter: @logoFilter;
    }
}

.ui.card.file.tsprj {
    .fileimage {
        background-image: @jsIcon;
        filter: @logoFilter;
        background-size: 65%;
        background-position-y: 50%;
    }
}

.ui.card.file.positive, .ui.card.file.positive:focus {
    border-color: var(--pxt-colors-green-background);
}

.ui.card.file.warning {
    border-color: @warningBackgroundColor;
}

.ui.card.file .selected-label {
    border-color: transparent !important;
    cursor: pointer;
    i.icon {
        cursor: pointer;
        font-size: 2rem;
        left: 0;
        top: 1rem;
    }
}

